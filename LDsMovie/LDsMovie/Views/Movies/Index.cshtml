@model IEnumerable<LDsMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h2>Movie List</h2>

<form class="form-inline my-2 my-lg-3" asp-controller="Movies" asp-action="Index">
    <input class="form-control mr-sm-2" name="search" placeholder="Search">
    <button class="btn btn-secondary my-2 my-sm-0" value="Filter" type="submit">Search</button>
</form>

<table class="table table-hover table-bordered table-info">
    <thead>
        <tr>
            <th scope="col">

                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th scope="col">
                <a class="label-success" asp-action="Create">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table table-bordered table-success">
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>
<a class="btn-success btn" asp-action="Create">Create New</a>

